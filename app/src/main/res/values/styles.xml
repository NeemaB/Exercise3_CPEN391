<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:listViewStyle">@style/PreferencesListViewStyle</item>
    </style>


    <!-- list view style for the preferences page -->
    <style name="PreferencesListViewStyle" parent="@android:style/Widget.Holo.ListView">
        <item name="android:background">@color/white</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@color/black</item>
        <item name="android:dividerHeight">1dp</item>

    </style>

    <style name="DialogTheme" parent="android:Theme.Holo.Light">

        <item name="android:textColor">@color/colorPrimary</item>
    </style>


</resources>
